<Page x:Class="AlgorithmsLaba2.View.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlgorithmsLaba2.View"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1800"
      Title="Menu">

    <Grid Background="DarkSlateGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Лабораторная №2" FontSize="50" TextAlignment="Center" Padding="70" Foreground="#FFE5FFFF"/>
        <Button Grid.Row="1" Content="Ханойские башни" FontSize="50" Click="Button_ClickOpenHanoinTowers" Width="1000" Background="#FFE5FFFF" Foreground="DarkSlateGray"/>
        <Button Grid.Row="2" Content="Кривая дракона" FontSize="50" Click="Button_ClickOpenDragonCurveFractal" Width="1000" Background="#FFE5FFFF" Foreground="DarkSlateGray"/>
        <Button Grid.Row="3" Content="Выход" FontSize="50" Click="Button_ClickExit" Width="1000" Background="#FFE5FFFF" Foreground="DarkSlateGray"/>
    </Grid>
</Page>
